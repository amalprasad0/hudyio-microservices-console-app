      "DownstreamHostAndPorts": [
        {
          "Host": "localhost",
          //"Host": "host.docker.internal",
          "Port": 4202
        }
      ]
    },
    {
      "UpstreamPathTemplate": "/gateway/checkOtpandActivateUser",
      "UpstreamHttpMethod": [ "Post" ],
      "DownstreamPathTemplate": "/api/user/checkOtpandActivateUser",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "localhost",
          //"Host": "host.docker.internal",
          "Port": 4202
        }
      ]
    },
    {
      "UpstreamPathTemplate": "/gateway/saveconnectionid",
      "UpstreamHttpMethod": [ "Post" ],
      "DownstreamPathTemplate": "/api/user/saveconnectionid",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "localhost",
          //"Host": "host.docker.internal",
          "Port": 4202
        }
      ]
    },
    {
      "UpstreamPathTemplate": "/gateway/chat-hub",
