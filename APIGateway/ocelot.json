{
  "GlobalConfiguration": {
    "BaseUrl": "https://localhost:7074/"
  },
  "Routes": [
    {
      "UpstreamPathTemplate": "/gateway/health",
      "UpstreamHttpMethod": [ "Get" ],
      "DownstreamPathTemplate": "/api/User/health",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "localhost",
          //"Host": "host.docker.internal",
          "Port": 4202
        }
      ]
    },
    {
      "UpstreamPathTemplate": "/gateway/storeuserandsendotp",
      "UpstreamHttpMethod": [ "Post" ],
